<style>
  header {
    z-index: 1;
    position: fixed;
    height: 100%;
    width: 9rem;
    background-color: rgba(var(--transparent), 0.3);
    backdrop-filter: blur(7px);
    -webkit-backdrop-filter: blur(7px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    overflow-y: auto;
    transition: all ease 650ms;
    transform-origin: left center;
  }

  .header-visable {
    transform: translateX(0);
  }

  .menu-btn {
    position: fixed;
    top: 2rem;
    left: 2rem;
    font-size: 1.8rem;
    color: var(--off-white);
    visibility: hidden;
    z-index: 2;
    cursor: pointer;
    transition: all ease 200ms;
  }

  .close-btn {
    position: fixed;
    top: 1rem;
    right: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--off-white);
    visibility: hidden;
    z-index: 2;
    cursor: pointer;
    transition: color ease 200ms !important;
  }

  .close-btn:hover {
    color: var(--secondary);
  }

  .not-visable {
    transform: translateX(-4rem) !important;
  }

  .menu-btn:hover {
    transform: scale(1.3);
    color: var(--secondary);
  }

  .logo {
    width: 6rem;
    margin-top: 2rem;
  }

  nav {
    display: flex;
    flex-direction: column;
    width: 100%;
    border-top: 1px rgba(var(--off-white-rgb), 0.3) solid;
    transition: all 750ms ease;
  }
  .btn-nav {
    background-color: transparent;
    padding: 0.8rem 0;
    width: 100%;
    border-bottom: 1px rgba(var(--off-white-rgb), 0.3) solid;
    position: relative;
    transition: all 750ms ease;
  }
  .btn-nav::before {
    content: "";
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transform: scaleX(0);
    background-color: rgba(var(--secondary-rgb), 1);
    transition: transform ease 300ms;
    transform-origin: right center;
  }

  .btn-nav:hover::before {
    transform: scaleX(1);
    transform-origin: left center;
  }

  .btn-nav:focus-visible::before {
    transform: scaleX(1);
    transform-origin: left center;
  }

  .icons {
    margin-bottom: 2rem;
  }

  .icon {
    height: 1.3rem;
    aspect-ratio: 1;
    margin-bottom: 1.3rem;
    transition: all 200ms ease !important;
  }

  .icon:hover {
    scale: 1.3;
  }

  .icon:focus-visible {
    scale: 1.3;
  }

  .svg {
    transition: all 200ms ease !important;
  }

  .icon:hover svg {
    fill: rgba(var(--secondary-rgb), 1);
  }

  .icon:focus-visible svg {
    fill: rgba(var(--secondary-rgb), 1);
  }

  @media (max-width: 56rem) {
    Header {
      transform: translateX(-100%);
    }
    .menu-btn {
      visibility: visible;
    }
    .close-btn {
      visibility: visible;
    }
  }
</style>
